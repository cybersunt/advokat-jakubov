mixin nav (className, name, items)
  nav(class=`${className}`)
    div(class=`${className}__wrapper`)
      div(class=`${className}__name`)=name
        ul(class=`${className}__list`)
          each item in items
            li(class=`${className}__item`)
              a(class=`${className}__link` href='#')= item

